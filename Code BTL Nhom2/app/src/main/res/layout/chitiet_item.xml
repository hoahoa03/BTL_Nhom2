<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do Android exercises"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_search"
        android:gravity="center|start"
        android:padding="12dp"
        android:paddingStart="20dp"
        >

        <LinearLayout
            android:id="@+id/ngayBatDau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calendar_02" />

            <Space
                android:layout_width="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày hết hạn"
                android:textColor="@color/black"
                />

            <Space
                android:layout_width="130dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ngayHetHan"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="23/12/2023"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/border_ngay"

                />
        </LinearLayout>

        <Space
            android:layout_width="40dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/gioBatDau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            >


        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_search"
        android:gravity="center|start"
        android:padding="12dp"
        android:paddingStart="20dp"
        >

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clock" />

            <Space
                android:layout_width="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian nhắc"
                android:textColor="@color/black"
                />

            <Space
                android:layout_width="160dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/thoiGianNhac"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="12:07"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/border_ngay"

                />
        </LinearLayout>



    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cap_nhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_gravity="end"
        android:background="@drawable/border_phanloai"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="#FD8313"/>


</LinearLayout>